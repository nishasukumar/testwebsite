<form method="GET" action="/reports/byfacility">
  <div class="form-row">
    <div class="col-7">
      <input type="text" class="form-control form-control-lg" placeholder="ENTER FACILITY NAME, COUNTY, OR STATE" name="keywords">
    </div>
	<div class="col">
    	<button type="submit" class="btn btn-primary btn-lg">Search</button>
    </div>
  </div>

</form>

<table class="table table-hover">
  	<thead>
  		<tr>
			<td>State</td>
			<td>Total Resident Cases</td>
			<td>Total Resident Deaths</td>
			<td>Total Staff Cases</td>
			<td>Total Staff Deaths</td>
		</tr>
  	</thead>
  	<tbody>
	  	{{#each reports as |report|}}
			<tr>
				<td>{{report.State}}</td>
				<td>{{report.residentsConfirmed}}</td>
				<td>{{report.residentsDeaths}}</td>
				<td>{{report.staffConfirmed}}</td>
				<td>{{report.staffDeaths}}</td>	
			</tr>
		{{/each}}
  	</tbody>
</table>